<div local-class="root">
  <div class="media">
    <div local-class="card">

      {{#if this.lastVisitOn}}
        <div local-class="lastVisit">
          Last usage on: {{this.lastVisitOn}}
        </div>
      {{/if}}
      

      <div local-class="row gap">
        
        <JubileeTextField 
          class={{local-class "item1"}}
          @label="Default"
          @label2="(pixels)"
          @text={{this.defaultPx}}
          @onChange={{fn this.px2rem "defaultPx"}}
        />
        <JubileeTextField 
          class={{local-class "item2"}}
          @label="Pixels"
          @text={{this.px}}
          @onChange={{fn this.px2rem "px"}}
        />
      </div>

      <div local-class="row">
        <JubileeTextField 
          class={{local-class "item"}}
          @label="Result in rem"
          @text={{this.rem}}
          @isReadonly={{true}}
        />
      </div>

    </div>
    <div local-class="footer">
      Version
      {{app-version versionOnly=true}}
    </div>
  </div>
</div>